{
  "name": "pondorasti",
  "version": "0.1.36",
  "description": "CLI for pondorasti",
  "author": "Alexandru Å¢urcanu",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/pondorasti/pondorasti"
  },
  "main": "src/index.ts",
  "keywords": [
    "cli",
    "macos",
    "homebrew",
    "dotfiles",
    "setup"
  ],
  "publishConfig": {
    "access": "public"
  },
  "bin": {
    "pondorasti": "./src/index.ts",
    "pd": "./src/index.ts"
  },
  "scripts": {
    "test": "bun test",
    "prepublishOnly": "bun test",
    "build": "bun run build:compile && bun run build:sign",
    "build:compile": "bun build --compile --minify --outfile=dist/pd src/index.ts",
    "build:sign": "codesign --deep --force --sign - --entitlements entitlements.plist dist/pd"
  },
  "dependencies": {
    "ink": "^6.7.0",
    "ink-gradient": "^4.0.0",
    "ink-spinner": "^5.0.0",
    "react": "^19.2.4",
    "yargs": "^18.0.0"
  },
  "devDependencies": {
    "@types/react": "^19.2.14",
    "@types/yargs": "^17.0.35"
  }
}
